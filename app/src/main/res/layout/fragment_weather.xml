<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size440dp"
        android:layout_margin="20dp"
        android:background="@color/peach"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/added_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size60dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weather_recycler_view"
        android:textColor="@color/orange"
        tools:text ="Current City"
        android:textSize="@dimen/size32sp"
        android:gravity="center">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>