<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/button_get_weather"
        android:layout_width="@dimen/size144dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size100dp"
        android:layout_marginBottom="@dimen/size144dp"
        android:backgroundTint="@color/peach"
        android:text="@string/get_weather"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/get_city_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size288dp"
        android:background="@color/peach"
        android:textColor="@color/white"
        android:text="@string/get_city"
        android:gravity="center"
        android:textSize="@dimen/size24dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/preference_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Current_City"
        android:textColor="@color/white"
        android:textSize="@dimen/size24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size120dp"
        tools:ignore="SpUsage">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>